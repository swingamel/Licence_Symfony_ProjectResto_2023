{% extends 'base.html.twig' %}

{% block title %}Détail plats{% endblock %}

{% block body %}
    {% block content %}
        <body>
        <table class="table">
            <h3>Détail de la catégorie {{ category.name }}</h3>
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Calories</th>
                <th scope="col">Prix</th>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">Gluant ?</th>
            </tr>
            </thead>
            <tbody>
            {% for plat in category.plats %}
                <tr>
                    <td>{{ plat.name }}</td>
                    <td>{{ plat.calories }} kcal</td>
                    <td>{{ plat.price }} €</td>
                    <td><img src="{{ plat.Image }}" width="100px"></td>
                    <td>{{ plat.description }}</td>
                    <td>{{ plat.Sticky ? 'Oui' : 'Non' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('front_dishes') }}" class="btn btn-primary">Retour</a>
        </body>
    {% endblock %}
{% endblock %}