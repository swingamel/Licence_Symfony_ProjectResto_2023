{% extends 'base.html.twig' %}

{% block title %}Prise en charge de la commande{% endblock %}

{% block body %}
    {% block content %}
        <h1>Passer une commande</h1>
        <div class="form-group">
            {{ form_start(form) }}
            <table class="table" style="width: 50%;position:relative; left:400px">
                <thead>
                <tr>
                    <td>
                        {{ form_label(form.dateheureCommande, 'Date et heure de la commande') }}
                        {{ form_widget(form.dateheureCommande, {'attr': {'id': 'dateheureCommande'}}, {'attr': {'class': 'form-control'}}) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(form.statutCommande, 'Statut de la commande') }}
                        {{ form_widget(form.statutCommande, {'attr': {'class': 'form-control'}}) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(form.tableCommande, 'Table de la commande') }}
                        {{ form_widget(form.tableCommande, {'attr': {'class': 'form-control'}}) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(form.Plats, 'Plats de la commande') }}
                        {{ form_widget(form.Plats, {'attr': {'class': 'form-control'}}) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(form.Serveur, 'Serveur de la commande') }}
                        {{ form_widget(form.Serveur, {'attr': {'class': 'form-control'}}) }}
                    </td>
                </tr>
                <tr>
                    <td>
                        {{ form_label(form.Client, 'Client de la commande') }}
                        {{ form_widget(form.Client, {'attr': {'class': 'form-control'}}) }}
                    </td>
                </thead>
            </table>
            <div style="text-align: center">
                <button class="btn btn-success">
                    {{ button_label|default('Passer la commande !') }}
                </button>
                <a type="button" class="btn btn-danger" href="{{ path('homepage') }}">
                    Annuler
                </a>
            </div>
        </div>
        <br>
        {{ form_end(form) }}
        {% block javascripts %}
            <script type="text/javascript">
                $(function () {
                    $('#dateheureCommande').datetimepicker();
                });
            </script>
        {% endblock %}
    {% endblock %}
{% endblock %}
